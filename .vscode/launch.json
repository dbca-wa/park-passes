    "version": "0.2.0",
    "configurations": [{
            "name": "Launch via NPM",
            "preLaunchTask": "nodeenv",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "serve",
            ],
            "cwd": "${workspaceFolder}/parkpasses/frontend/parkpasses/",
            "runtimeExecutable": "${workspaceFolder}/parkpasses/frontend/parkpasses/venv/bin/npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        }, {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "localhost:8010",
                "--noreload"
            ],
            "django": true,
            "justMyCode": true
        }
    ]
}
